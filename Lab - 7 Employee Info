<!DOCTYPE html>
<html>
<head>
    <title>Employee Info</title>
    <style>
        .container {
            width: 400px;
            padding: 20px;
            border: 2px solid #828282;
            border-radius: 10px;
            background-color: #f9f9f9;
        }
        label {
            font-weight: bold;
            display: block;
            margin-top: 10px;
        }
        input {
            width: 100px;
            margin: 5px 0;
            padding: 6px;
        }
        button {
            padding: 8px 15px;
            font-size: 14px;
            margin-top: 10px;
            cursor: pointer;
        }
        .result {
            margin-top: 15px;
            background: #eef;
            padding: 10px;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Employee Info</h2>

        <label>Employee Name:</label>
        <input type="text" id="ename">

        <label>Emp ID:</label>
        <input type="text" id="eid">

        <label>Basic Pay:</label>
        <input type="number" id="basic">

        <button onclick="calculate()">Calculate Salary</button>

        <div class="result" id="output"></div>
    </div>

    <script>
        function calculate() {
            let name = document.getElementById("ename").value;
            let eid = document.getElementById("eid").value;
            let basic = parseFloat(document.getElementById("basic").value);

            if (isNaN(basic) || basic <= 0) {
                alert("Please enter a valid Basic Pay!");
                return;
            }

            // Salary components
            let DA = 0.40 * basic;
            let HRA = 0.20 * basic;
            let PF = 0.12 * basic;
            let grosspay = basic + DA + HRA;
            let tax = 0.10 * grosspay;
            let deduction = PF + tax;
            let netpay = grosspay - deduction;

            // Display results
            document.getElementById("output").innerHTML =
                "<b>Emp Name:</b> " + name + "<br>" +
                "<b>Emp ID:</b> " + eid + "<br>" +
                "<b>Basic Pay:</b> " + basic.toFixed(2) + "<br>" +
                "<b>DA:</b> " + DA.toFixed(2) + "<br>" +
                "<b>HRA:</b> " + HRA.toFixed(2) + "<br>" +
                "<b>PF:</b> " + PF.toFixed(2) + "<br>" +
                "<b>Gross Pay:</b> " + grosspay.toFixed(2) + "<br>" +
                "<b>Tax:</b> " + tax.toFixed(2) + "<br>" +
                "<b>Total Deduction:</b> " + deduction.toFixed(2) + "<br>" +
                "<b>Net Pay:</b> " + netpay.toFixed(2);
        }
    </script>
</body>
</html>
 
