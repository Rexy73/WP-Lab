    
<!DOCTYPE html>
<html>
<head>
    <title>Student Information</title>
    <style>
        .container {
            width: 400px;
            padding: 20px;
            border: 2px solid #444;
            border-radius: 10px;
            background-color: #f9f9f9;
        }
        label {
            font-weight: bold;
            display: block;
            margin-top: 10px;
        }
        input {
            padding: 6px;
            margin: 5px 0;
            width: 150px;
        }
        button {
            padding: 8px 15px;
            margin-top: 10px;
            cursor: pointer;
        }
        .result {
            margin-top: 15px;
            background: #eef;
            padding: 10px;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Student Info</h2>

        <label>Name:</label>
        <input type="text" id="name">

        <label>Reg No:</label>
        <input type="text" id="regno">

        <label>Subject 1 Marks:</label>
        <input type="number" id="sub1">

        <label>Subject 2 Marks:</label>
        <input type="number" id="sub2">

        <label>Subject 3 Marks:</label>
        <input type="number" id="sub3">

        <button onclick="calculate()">Calculate Result</button>

        <div class="result" id="output"></div>
    </div>

    <script>
        function calculate() {
            let name = document.getElementById("name").value;
            let regno = document.getElementById("regno").value;
            let sub1 = parseInt(document.getElementById("sub1").value);
            let sub2 = parseInt(document.getElementById("sub2").value);
            let sub3 = parseInt(document.getElementById("sub3").value);

            if (isNaN(sub1) || isNaN(sub2) || isNaN(sub3)) {
                alert("Please enter marks for all subjects!");
                return;
            }

            let total = sub1 + sub2 + sub3;
            let avg = total / 3;
            let result, grade;

            // Check pass/fail
            if (sub1 >= 35 && sub2 >= 35 && sub3 >= 35) {
                result = "Pass";
            } else {
                result = "Fail";
                grade = "No Grade";
            }

            // Assign grade only if passed
            if (result === "Pass") {
                if (avg >= 85) grade = "A+";
                else if (avg >= 70) grade = "A";
                else if (avg >= 50) grade = "B";
                else grade = "C";
            }

            // Display results
            document.getElementById("output").innerHTML =
                "<h3>Student Info</h3>" +
                "<b>Name:</b> " + name + "<br>" +
                "<b>Reg No:</b> " + regno + "<br>" +
                "<b>Total:</b> " + total + "<br>" +
                "<b>Average:</b> " + avg.toFixed(2) + "<br>" +
                "<b>Result:</b> " + result + "<br>" +
                "<b>Grade:</b> " + grade;
        }
    </script>
</body>
</html>
 
